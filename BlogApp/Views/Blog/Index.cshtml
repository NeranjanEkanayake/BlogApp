            @*     <div class="card shadow-sm mb-3"> *@
            @*         <div class="card-body"> *@
            @*             <h5 class="card-title">@blog.Title</h5> *@
            @*             <p class="card-text">@blog.Description</p> *@
            @*             <a asp-controller="Blog" asp-action="Details" asp-route-id="@blog.BlogId" class="btn btn-primary">View</a> *@
            @*         </div> *@
            @*     </div> *@
            @* </div> *@
        }
    }
    else
    {
        <p>No blogs available, Come back later</p>
    }
</div>